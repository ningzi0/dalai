
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative
} 
.border-bg{
  border-radius: 50%;
  width: 35em;
  height: 35em;
  background: #000000;
  position: fixed;
  top: -50%;
  left: 50%;
  transform: translate(-50%,0);
}

.content{
  position: relative;
  z-index: 2
}

.alignright{
  text-align: right
}



/*暂无数据*/
.nodata{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 0.85em;
  color: rgb(199, 199, 199);
  
}

