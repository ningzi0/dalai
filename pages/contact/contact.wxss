/* pages/contact/contact.wxss */
.newshow{
  background: #fff;
  margin: 0.5em;
  min-height: 20em;
  padding: 1em;
  text-align: center
}

.newshow image{
  width: 5em;
  height: 5em;
  border-radius: 50%;
}
.newshow .h3{
  margin-bottom: 1em;
}

.contact{
  border-top: 1px solid #eee;
  display: flex;
  border-bottom: 1px solid #eee;
}
.contact-item{
  flex: 1;
  text-align: center;
  padding: 1em 0;
  border-right: 1px solid #eee
}
.contact-item:last-child{
  border-right: 0;
}

.contact-item text{
  display: block;
}
.contact-item image{
  width: 4em;
  height: 4em
}




