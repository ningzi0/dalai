/* pages/activities/activities.wxss */

page,.content{
  background: #f3f3f3
}

.content{
  margin: 0 0.5em;
  border-radius: 0.25em;
  padding: 0.2em 0;
  overflow-y: scroll
}

.activitie .ul .li{
  margin: 0.5em 0;
  background: #fff;
  box-shadow: 0 0 0.2em rgba(0,0,0,0.1);
  padding: 0.35em;
}
.activitie .ul .li .p{
  font-size: 0.85em;
  color: #999;
  line-height: 1.75;
  font-weight: 200
}
.activitie .ul .li .h3{
  margin-bottom: 0.5em;
}

.btnCon{
  display: flex;
  margin-top:0.5em; 
  border-top: 1px solid #eee;
  padding: 0.5em 0 0
}
.btnCon .btn{
  flex: 1;
  text-align: center;
  padding: 0.5em 0;
  margin: 0 0.2em;
  background: #dcdcdc;
  color: #fff;
}

.btnCon .btn.active{
  background: radial-gradient(rgb(82, 82, 82), rgb(49, 49, 49), rgb(0, 0, 0)); 
}
.activitie .h3 text{
  font-size: 0.65em;
  font-weight: 200;
  color: rgb(97, 97, 97);
  display: inline-block;
  margin-left: 0.35em;
  padding: 0.35em
}





.myactivityContent{
  margin-top: 3em
}





.fixed{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 999
}
.swiper-tab{
  width: 100%;
  display: flex;
}
.swiper-tab image{
  width: 2em;
  height: 2em
}


.about_page{
  margin: 0 10px;
}
.swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    color: #ccc;
    font-size: 16px;
    margin: 0 auto;
    box-shadow: 0 0 0.5em rgba(0,0,0,0.15)
}
.swiper-tab-item{
    width: 50%; 
    color:#fff;
    text-align: center;
    padding: 0.3em 0 0;
    background: rgb(255, 255, 255);
}
.active{
    color:#fff;
    /* border-bottom: 4rpx solid #F65959; */
    font-size: 16px;
    font-weight: bold;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}


.Station{
  background: #fff;
}
.Station .ul .li{
  padding: 0.85em 0.5em;
  border-bottom: 1px solid #eee;
}
.Station .ul .li .h3{
  font-size: 1em;
  padding: 0.35em 0;
}
.Station .ul .li .p{
  font-size: 0.9em;
  font-weight: 300;
}