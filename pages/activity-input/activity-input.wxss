/* pages/Release/Release.wxss */
.border-bg{
  width: 35em;
  height: 35em;
 
}


.release{
  color: #000;
  background: #eff5f7;
  margin: 0 0.5em;
  border-radius: 0.2em;
  position: relative;
  z-index: 1;
  overflow-x: hidden;
  padding: 0 0 5em
}
.release .li{
  padding: 0.75em;
  border-bottom: 1px solid #eee
}
.release .li text{
  width: 25%;
  display: inline-block;
  vertical-align: middle;
  font-weight: 200
}
.release .li input{
  width: 70%;
  display: inline-block;
  vertical-align: middle;
  font-weight: 500;
  font-size: 0.85em;
  padding: 1.5%;
}
.release .li textarea{
  width: 70%;
  background: rgba(255,255,255,0.5);
  display: inline-block;
  vertical-align: top;
  position: relative;
  z-index: 1;
  min-height: 3em;
  font-size:0.85em ;
  padding: 1.5%;
}














