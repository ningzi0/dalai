.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  min-height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999999999;
  background: #ededed;
  padding-top: 20rpx;
}


.commodity_attr_box .ul{
  text-align: center;
}
.commodity_attr_box .ul .li{
  display: inline-block;
  width: 30%;
  background: #fff;
  box-shadow: 0 0 1em rgba(0,0,0,0.1);
  padding:0.5em 0.35em;
  box-sizing: border-box;
  margin: 0.2em;
  position: relative;
}
.commodity_attr_box .ul .li checkbox{
  position: absolute;
  top: 0;
  right: 0;
}

checkbox .wx-checkbox-input{
border-radius: 50%;/* 圆角 */
width: 40rpx; /* 背景的宽 */
height: 40rpx; /* 背景的高 */
border: none;
background: none;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: none;
  background: #000;
  color: #fff
}


.commodity_attr_box .ul .li .p{
 font-weight: 100 
}
.commodity_attr_box .ul .li image{
  width: 6em;
  height: 6em;
  border-radius: 50%
}


.commodity_attr_box .title{
  text-align: center;
  font-size: 1.2em;
  font-weight: 200;
  padding: 0 0 0.5em;
  border-bottom: 1px solid #b3b3b3;
  margin-bottom: 0.5em;
  position: relative;
}
.commodity_attr_box .title .close{
  width: 1.5em;
  height: 1.5em;
  position: absolute;
  right: 0.5em;
  top: 0
}


.commodity_attr_box button{
   background: radial-gradient(rgb(82, 82, 82), rgb(49, 49, 49), rgb(0, 0, 0)); 
   color: #fff;
   margin-bottom: 0.25em
}
.commodity_attr_box button:active{
  background: radial-gradient(rgb(58, 58, 58), rgb(29, 29, 29), rgb(0, 0, 0)); 
}










.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 650rpx;
  margin-left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0 0 0.5em rgba(0,0,0,0.5)
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
